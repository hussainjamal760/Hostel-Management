{
  "name": "hostelite",
  "version": "1.0.0",
  "private": true,
  "description": "Hostelite HMS - A complete hostel management system",
  "keywords": ["hostel", "management", "mern", "typescript"],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev -w apps/backend",
    "dev:web": "npm run dev -w apps/web-admin",
    "dev:mobile": "npm run start -w apps/mobile-app",
    "build:backend": "npm run build -w apps/backend",
    "build:web": "npm run build -w apps/web-admin",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rimraf **/node_modules **/dist **/.turbo"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
